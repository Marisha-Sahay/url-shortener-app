<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
<h1>Enter a new Link</h1>
    <% if @link && @link.errors.any? %>
      <ul>
        <% @link.errors.full_messages.each do |message| %>
        <li class="error"><%= message %></li>
        <%end%>
      </ul>
    <% end %>
<%= form_tag '/links', method: :post do %>
<form class="form-horizontal">
<div class="form-group">
<%=label_tag :slug %>
<%=text_field_tag :slug, @link.slug, class:"form-control" %>
</div>
<div class="form-group">
<%=label_tag :target_url %>
<%=text_field_tag :target_url, @link.target_url, class:"form-control" %>
<%= submit_tag "Submit" %>
<% end %>
</form>